@model Ultra.Dal.Entities.UltraConfiguration

@{
	ViewBag.Title = "title";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Head
{
	<script type="text/javascript" src="~/static/js/config.js"></script>
	@*<link type="text/css" rel="stylesheet" href="../../static/css/runs-history.css">*@
}

<form action="/-/save-configuration" method="POST" id="edit-configuration-form">
	<h2>Server Configuration</h2>

	<div class="row">
		<div class="label">Servers:</div>
		<div class="input"><input class="large" type="text" id="servers" name="servers" value="@string.Join(", ", Model.Servers ?? new[] { "" })"></div>
	</div>
	<div class="row">
		<div class="label">JMeter batch file:</div>
		<div class="input"><input class="large" type="text" id="jMeterBatFile" name="jMeterBatFile" value="@Model.JMeterBatFile"/></div>
	</div>
	<div class="row">
		<div class="label">Jmx scripts directory:</div>
		<div class="input"><input class="large" type="text" id="jmxScripts" name="jmxScripts" value="@Model.JmxScripts"/></div>
	</div>
	<div class="row">
		<div class="label">Jmx file archive:</div>
		<div class="input"><input class="large" type="text" id="jmxFileArchive" name="jmxFileArchive" value="@Model.JmxFileArchive"/></div>
	</div>
	<div class="row">
		<div class="label">Output archive:</div>
		<div class="input"><input class="large" type="text" id="outputArchive" name="outputArchive" value="@Model.OutputArchive"/></div>
	</div>

	<h2>Default run settings</h2>

	<div class="row">
		<div class="label">Domain:</div>
		<div class="input"><input class="large" type="text" id="defaultDomain" name="defaultSettings.domain" value="@Model.DefaultSettings.Domain"/></div>
	</div>
	<div class="row">
		<div class="label">Duration:</div>
		<div class="input"><input class="small" type="text" id="defaultDuration" name="defaultSettings.duration" value="@Model.DefaultSettings.Duration"/> sec</div>
	</div>
	<div class="row">
		<div class="label">Rampup:</div>
		<div class="input"><input class="small" type="text" id="defaultRampup" name="defaultSettings.rampUp" value="@Model.DefaultSettings.RampUp"/> sec</div>
	</div>

	<div class="row actions">
		<input type="button" id="save-config" class="btn btn_primary" value="Save"/>
	</div>
</form>